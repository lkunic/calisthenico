<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	android:layout_width="match_parent"
	android:layout_height="@dimen/list_item_row_height"
	android:orientation="horizontal">

	<ImageView
		android:id="@+id/grabber"
		android:layout_width="30dp"
		android:layout_height="match_parent"
		android:paddingRight="@dimen/activity_inner_padding"
		android:src="@drawable/ic_drawer"
		android:contentDescription="@string/description_grabber"/>

	<com.lkunic.libs.apptoolbox.views.FontTextView
		android:id="@+id/txt_reps"
		android:layout_width="@dimen/exercise_rep_width"
		android:layout_height="match_parent"
		android:gravity="center"
		android:textSize="@dimen/abc_text_size_large_material"
		app:font="bold.ttf"/>

	<com.lkunic.libs.apptoolbox.views.FontTextView
		android:id="@+id/txt_exercise_name"
		android:layout_width="wrap_content"
		android:layout_height="match_parent"
		android:gravity="center"
		android:paddingLeft="@dimen/activity_inner_padding"
		android:paddingRight="@dimen/activity_inner_padding"
		android:textSize="@dimen/abc_text_size_medium_material"
		app:font="regular.ttf"/>


</LinearLayout>